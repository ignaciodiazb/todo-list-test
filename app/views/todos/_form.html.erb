<%= form_with model: todo, class: "space-y-6 bg-white rounded-lg shadow p-8" do |form| %>
  <% if todo.errors.any? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
      <h2 class="text-red-700 font-semibold mb-2">There were errors:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, autofocus: true, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-lg px-4 py-2" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base px-4 py-2" %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :completed, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
    <%= form.label :completed, class: "ml-2 block text-sm text-gray-700" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "inline-block rounded-lg bg-blue-600 px-5 py-2 text-white font-semibold shadow hover:bg-blue-700 transition" %>
    <%= link_to "Back", todos_path, class: "text-blue-600 hover:underline font-medium" %>
  </div>
<% end %>
