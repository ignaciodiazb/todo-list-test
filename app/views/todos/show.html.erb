<div class="w-full max-w-2xl mx-auto">
	<div class="mb-8">
		<h1 class="text-3xl font-bold text-gray-900 mb-2">Todo Details</h1>
		<p class="text-gray-500">Review your task below.</p>
	</div>

	<div class="bg-white rounded-lg shadow p-8 space-y-6">
		<div>
			<span class="block text-sm font-medium text-gray-700 mb-1">Title</span>
			<span class="text-lg text-gray-900 font-semibold"><%= @todo.title %></span>
		</div>

		<div>
			<span class="block text-sm font-medium text-gray-700 mb-1">Description</span>
			<span class="text-base text-gray-800"><%= @todo.description.presence || "No description provided." %></span>
		</div>

		<div>
			<span class="block text-sm font-medium text-gray-700 mb-1">Completed</span>
			<% if @todo.completed? %>
				<span class="inline-flex items-center px-3 py-1 rounded-full bg-green-100 text-green-800 text-sm font-semibold">Completed</span>
			<% else %>
				<span class="inline-flex items-center px-3 py-1 rounded-full bg-yellow-100 text-yellow-800 text-sm font-semibold">Not completed</span>
			<% end %>
		</div>

		<div>
			<span class="block text-sm font-medium text-gray-700 mb-1">Estimated Time</span>
			<% if @todo.estimated_time.present? %>
				<span class="text-base text-gray-800">
					<%= @todo.estimated_time %> minutes
					<% if @todo.estimated_time >= 60 %>
						(<%= (@todo.estimated_time / 60).to_i %>h <%= @todo.estimated_time % 60 %>m)
					<% end %>
				</span>
			<% else %>
				<span class="text-base text-gray-500">Not estimated</span>
			<% end %>
		</div>

		<div>
			<span class="block text-sm font-medium text-gray-700 mb-1">Added by</span>
			<span class="text-base text-gray-800"><%= @todo.user.email_address %></span>
		</div>

			<div class="flex items-center justify-between pt-6">
				<div class="flex gap-3">
					<%= link_to "Edit", edit_todo_path(@todo), class: "inline-block rounded-lg bg-blue-600 px-5 py-2 text-white font-semibold shadow hover:bg-blue-700 transition" %>
					<%= button_to "Delete", @todo, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this todo?" }, class: "inline-block rounded-lg bg-red-600 px-5 py-2 text-white font-semibold shadow hover:bg-red-700 transition" %>
				</div>
				<%= link_to "Back", todos_path, class: "text-blue-600 hover:underline font-medium" %>
			</div>
	</div>
</div>
